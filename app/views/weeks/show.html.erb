<% content_for(:navbar) do %>
    <a class="btn btn-primary" href="/courses">Home</a>
    <% unless @week.id == @week.course.weeks.first.id %>
      <%= link_to 'Previous', @week.previous, :class => "btn btn-primary" %>
    <% end %>
    <% unless @week.id == @week.course.weeks.last.id %>
      <%= link_to 'Next', @week.next, :class => "btn btn-primary" %>
    <% end %>
<% end %>

<h1><%= @week.title %> Page</h1>


<ul>
  <% @week.lessons.each do |lesson| %>
  <li><%= lesson.title %> | <%= link_to "View Lesson", week_lesson_path(lesson) %></li>
  <% end %>
</ul>


<%= link_to "Edit", edit_course_week_path(@week) %> | <%= link_to "Delete", week_path(@week), :data => {:confirm => "You Sure?", :method => 'delete'} %> | <%= link_to "Add a Lesson", new_week_lesson_path(@week) %>
<hr>
<%= link_to "Back to Course Page", course_path(@course) %>
